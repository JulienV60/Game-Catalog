{% extends "layout.njk" %}

{% block content %}


{# ------ GAME-DETAILS ------- #}

{%for game in gameDetails %}
  <img src="{{game.cover.url}}"/>
  <h1> {{game.name}} </h1>
  <p> {{game.platform.name}} </p>
  <a href = "{{game.platform.platform_logo_url}}"><img src="{{game.platform.platform_logo_url}}"/></a>
  <p> {{game.genres}} </p>
  <div>
      <button type="button">
        Add to cart
        <span><i class="fas fa-plus"></i></span>
      </button>
      <button type="button" >
        Buy now
        <span><i class="fas fa-shopping-cart"></i></span>
      </button>
  </div>
   <p> {{game.summary}} </p>
   {%else%}
  <li> It is empty </li>
{%endfor%}
{# ------ GAME-DETAILS END ------- #}

{% endblock %}



