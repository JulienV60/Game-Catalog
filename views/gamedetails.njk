{% extends "layoutdeux.njk" %}

{% block content %}


{# ------ GAME-DETAILS ------- #}
<div class= "container-game-details " style="70%">
<div class="row justify-content-center" >
{%for game in gameDetails %}
<div class="card bg-white rounded">
<div class="row mx-auto"style="margin-top:3rem">
  <div class="col-sm-4"style="padding-left:6rem">
      <img class="cover" src="{{game.cover.url}}" class="img-fluid rounded" alt="{{game.cover.name}}">
  </div>


  <div class="col-sm-8 text-center bg-white rounded" >
        <h5 class="card-title">{{game.name}} </h5>
        <p class="card-title"> <img class ="rounded" src="{{game.platform.platform_logo_url}}" alt ="{{game.platform.name}}"style="width:5rem"/> </p>
        <p class="card-text"> Genre: {{game.genres}} </p>
      <div>



  <form method="get" action="/panier">
   <button class="bg bg-secondary rounded" type="submit" name="{{game._id}}" > <span> BUY NOW! <i class="fas fa-shopping-cart"></i></span></button>
  </form>
  </div>
  </div>

<div class="column">
      <div class="row justify-content-center bg-white rounded"style="padding:5% ">
        <div class="col-8 text-center ">
          <p class="card-text"> {{game.summary}}</p>
        </div>
        </div>

  </div>
  </div>

{%else%}
  <li> It is empty </li>
{%endfor%}
<div>

{# ------ GAME-DETAILS END ------- #}
{% endblock %}



