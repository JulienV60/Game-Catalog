{% extends "layout.njk" %}
{%block css %}
  <link rel="stylesheet" href="Public/css/style.css"/>
{% endblock %}

{% block content %}
<div class="container p-3 my-3  text-white ">
 <div class="row align-self-end">
  {%for item in myPlatform %}
    {% if loop.index0 < 5 %}
    <div class="col align-self-end view overlay zoom" >
      <a href = "/{{item._id}}/{{item.slug}}"><img src="{{item.cover.url}}"  alt="smaple image" class = "cover"/></a>
      <p> <a href = "/{{item._id}}/{{item.slug}}" class="link-light"> {{item.name}} </a></p>
    </div>
    {% endif %}
  {%endfor%}
  </div>

  <div class="row align-self-end">
  {%for item in myPlatform %}
    {% if loop.index0 > 4 %}
    <div class="col align-self-end view overlay zoom" >
      <a href = "/{{item._id}}/{{item.slug}}"><img src="{{item.cover.url}}"  alt="smaple image" class = "cover"/></a>
      <p> <a href = "/{{item._id}}/{{item.slug}}" class="link-light"> {{item.name}} </a></p>
    </div>
    {% endif %}
  {%endfor%}
  </div>
  </div>

{% endblock %}

